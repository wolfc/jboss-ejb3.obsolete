      <version>1.3.4-jboss-update1</version>
    </dependency>
    <dependency>
      <groupId>jboss.jbossts</groupId>
      <artifactId>jbossts-common</artifactId>
      <version>4.3.0.GA</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <version.org.jboss.ejb3.jboss-ejb3-interceptors>1.0.0</version.org.jboss.ejb3.jboss-ejb3-interceptors>
      </properties>
    </profile>
    <profile>
      <id>CI</id>
      <properties>
        <version.org.jboss.ejb3.jboss-ejb3-interceptors>[0,)</version.org.jboss.ejb3.jboss-ejb3-interceptors>
      </properties>
    </profile>
  </profiles>
</project>
